{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/integrations/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/integrations/vscode-extension/dist/**/*.js"
      ],
      "preLaunchTask": "npm: compile - vscode-extension"
    },
    {
      "name": "Debug golang",
      "type": "go",
      "debugAdapter": "dlv-dap", // the default
      "request": "attach",
      "port": 40000,
      "host": "127.0.0.1", // can skip for localhost
      "mode": "remote",
      "substitutePath": [
        {
          "from": "${workspaceFolder}/backend",
          "to": "/codeclarity"
        }
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug API container",
      "address": "0.0.0.0",
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/app",
      "restart": true,
      "port": 9229,
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"]
    },
  ]
}
